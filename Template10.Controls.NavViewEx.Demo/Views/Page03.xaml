<Page
    x:Class="Demo.Views.Page03"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Uid="Page03"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel Margin="16" Width="400" HorizontalAlignment="Left">
            <StackPanel.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="0,0,0,16" />
                </Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Margin" Value="0,0,0,16" />
                </Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="0,0,0,16" />
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="User profile" Style="{StaticResource HeaderTextBlockStyle}" />
            <TextBlock Text="New record" Style="{StaticResource SubheaderTextBlockStyle}" />
            <TextBox Header="First Name" />
            <TextBox Header="Middle Name" />
            <TextBox Header="Last Name" />
            <TextBox Header="Email address" />
            <ComboBox SelectedIndex="0" Header="Gender">
                <ComboBox.Items>
                    <ComboBoxItem>Male</ComboBoxItem>
                    <ComboBoxItem>Female</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>
            <CheckBox Content="Administrator" />
            <Button>Create</Button>
        </StackPanel>

    </Grid>
</Page>
